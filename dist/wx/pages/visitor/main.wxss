@import "../../common/vendor.wxss";

.weui-cell__bd {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.weui-cell__bd ._text {
  width: 30%;
}
.weui-input {
  text-align: right;
  width: 70%;
}
.rich {
  margin: 20rpx 30rpx;
}
.rich ._textarea {
  width: calc(100% - 20rpx);
  margin-top: 20rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
}
.actiondata {
  padding: 0 36rpx 10rpx;
}
.uploader {
  padding: 20rpx 30rpx 0;
  border-bottom: 2rpx solid #ccc;
}
.uploader ._view {
  margin-bottom: 10rpx;
}